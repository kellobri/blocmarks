<h1><%= @topic.title %></h1>

<div class="row">
	<div class="col-md-8">
		<p class="lead">Topic created by: <%= @topic.user.name %></p>
		<%= render partial: 'bookmarks/blocmarks', locals: {topic: @topic.title} %>
	</div>
	<div class="col-md-4">
		<%# if policy(Bookmark.new).create? %>
			<%#= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
		<%# end %>
		<%# if policy(@topic).destroy? %>
			<%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic? All blocmarks will also be deleted.' } %>
		<%# end %>
	</div>
</div>
