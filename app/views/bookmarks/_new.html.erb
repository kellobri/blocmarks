<div class="panel panel-primary">
	<div class="panel-heading">
		<h2 class="panel-title">Add a New Blocmark!</h2>
	</div>
	<div class="panel-body">
		<%= form_for Bookmark.new do |f| %>
			<div class="form-group">
				<%= f.label :topic %>
				<%= f.collection_select(:topic_id, Topic.all, :id, :title) %>
			</div>
			<div class="form-group">
				<%= f.label :url %>
				<%= f.text_field :url, class: 'form-control', placeholder: "Enter the url address" %>
			</div>
			<%= f.submit "Save", class: 'btn btn-primary btn-lg' %>
		<% end %>
	</div>
</div>