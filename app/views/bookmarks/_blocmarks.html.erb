<% blocmarks = Bookmark.joins(:topic).where(topics: {title: topic}) %>
<ul class="no-bull">
<% blocmarks.each do |mark| %>
	<h4>
		<li>
			<div class="del-button pull-left">
				<%= render partial: 'likes/like', locals: {bookmark: mark} %>
			</div>
				<%= link_to mark.url, "//#{mark.url}" %>
		</li>
	</h4>
<% end %>
</ul>